# Color temperature
exec --no-startup-id redshift -l 36:-86 -t 5700:3600
bindsym $mod+Shift+d exec redshift -l 36:-86 -t 5700:3600
bindsym $mod+Shift+f exec pkill -USR1 redshift

# Audio controls
bindsym XF86AudioRaiseVolume exec amixer -c 0 set Speaker 5+
bindsym XF86AudioLowerVolume exec amixer -c 0 set Speaker 5-
bindsym XF86AudioMute exec amixer -c 0 set Master toggle

# Screen brightness controls
# git clone https://github.com/haikarainen/light.git
bindsym XF86MonBrightnessUp exec light -A 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 5 # decrease screen brightness

# Screenshots and screencapturing!
