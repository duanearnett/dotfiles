bindsym --release $mod+p exec "scrot -s 'screenshot_%Y%m%d_%H%M%S.png' -e 'mv $f ~/Inbox/Screenshots/'"
bindsym --release $mod+Shift+p exec "scrot -s -e 'screenshot_%Y%m%d_%H%M%S.png' -e 'mv $f ~/Inbox/Screenshots/'"

# Use Mouse+$mod to drag floating windows to their wanted position
